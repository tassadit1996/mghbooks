{% extends 'base.html.twig' %}

{% block title %}Connexion-MGH Books{% endblock %}

{% block home %}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
    
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div style=" margin-left:20%;margin-right:10%; margin-top: 10px; font-size: 18px" class="mb-3">
            Vous etes connect√©  {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <br>
    <div style="text-align:center">
    <h1 style="color: lightseagreen;font-size: 28px">Connexion</h1><br>
    <label class="label1" for="inputEmail">Adresse email</label>
    <input class="input1"type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="  Votre email" class="form-control" autocomplete="email" required autofocus> <br>
    <label class="label1" for="inputPassword">Mot de passe</label>
    <input class="input1"  type="password" name="password" id="inputPassword" placeholder="  Votre mot de passe" class="form-control" autocomplete="current-password" required>

    <input  type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button style="font-size: 15px;" class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</form>
<h1 style="font-size: 18px">pas encore de compte ?
<a style="font-size: 15px; margin-right:10%;"  href="{{path('register')}}">
        S'inscrire
    </a></h1></div>
    <br><br><br><br><br><br><br><br>
{% endblock %}
