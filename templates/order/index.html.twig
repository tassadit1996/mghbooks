{% extends 'base.html.twig' %}

{% block title %}Valider Ma Commande - MGH-books{% endblock %}

{% block home %}
<center>
<h2 style="font-size: 18px; padding-top:15px;">Je passe ma commande</h2>
</center>
<center>
<div class="row" id="row4">
<div class="col-md-6">
<div style="text-align:left; ">
{% set formHtml %}
{{form_start(form, {action: path('order_recap') })}}

{{form_end(form)}}
{% endset %}

{{formHtml|replace({'[br]' : '</br>'})|raw}}
</div>
</div>
<div class="col-md-6">
<b style="font-size: 18px;" id="txt1">Ma commande</b><br>
{% for product in cart %}
<div class="row order-summary"  style="width:400px;">
<div class="col-md-2" style="text-align:left;">
    <img src="/uploads/files/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px">
</div>
<div class="col-md-8 my-auto" style="text-align:left; font-size: 12px;">
    {{product.product.name}}<br>
    <small>{{product.product.name}}</small>
</div>
<div class="col-md-2 my-auto" style="text-align:left; font-size: 12px;">
    X {{product.quantity}}
</div>
</div>
{% endfor %}

</div>
</div>
<center>
{% endblock %}
